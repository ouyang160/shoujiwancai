<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
  <com.rengwuxian.materialedittext.MaterialEditText
      android:id="@+id/dialog_phoneNum"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="30dp"
      android:layout_marginRight="30dp"
      android:layout_marginTop="20dp"
      android:cursorVisible="false"
      android:drawableLeft="@mipmap/ic_smartphone_grey_500_24dp"
      android:hint="手机号"
      app:met_baseColor="@color/black"
      app:met_floatingLabel="highlight"
      app:met_floatingLabelAnimating="true"
      app:met_floatingLabelTextSize="@dimen/Caption"
      app:met_primaryColor="@color/colorPrimary"
      app:met_singleLineEllipsis="true"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="30dp"
      android:layout_marginRight="30dp"
      android:orientation="horizontal"
      >
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/dialog_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:drawableLeft="@mipmap/ic_vpn_key_grey_500_24dp"
        android:hint="验证码"
        android:cursorVisible="true"
        app:met_baseColor="@color/black"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelAnimating="true"
        app:met_floatingLabelTextSize="@dimen/Caption"
        app:met_primaryColor="@color/colorPrimary"
        app:met_singleLineEllipsis="true"
        />
    <TextView
        android:id="@+id/dialog_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="已发送"
        android:layout_weight="2"
        android:textSize="@dimen/BodySmall"
        android:textColor="@color/black"
        />
  </LinearLayout>


</LinearLayout>
