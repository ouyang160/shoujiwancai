<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="55dp">
    <ImageView
        android:layout_width="8dp"
        android:id="@+id/item_msg_isread"
        android:src="@mipmap/msg_isread"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:layout_height="8dp" />
    <ImageView
        android:src="@mipmap/msg_systemmsg"
        android:layout_width="30dp"
        android:layout_marginRight="8dp"
        android:id="@+id/item_msg_avatar"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/item_msg_name"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:text="用户名字"
                android:layout_marginLeft="7dp"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="2017-2-19"
                android:layout_marginRight="10dp"
                android:textSize="12sp"
                android:id="@+id/item_msg_time"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="7dp"
            android:text="这是一条心痛消息.....这是一条心痛消息...这是一条心痛消息+++++这是一条心痛消息++++."
            android:maxLines="1"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:id="@+id/item_msg_infor"
            android:layout_marginRight="10dp"
            android:layout_height="0dp" />
    </LinearLayout>

</LinearLayout>